<%= form_with model: @docket, local: true do |form| %>
  <% if @docket.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@docket.errors.count, "error") %>
        prohibited this docket from being saved:
      </h2>
      <ul>
        <% @docket.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <div id="edit-docket" class="form-row">
    <div class="col-4">
      <%= form.date_field :start, :class => 'form-control', :value => @docket.start %>
    </div>
    <div class="col-4">
      <%= form.date_field :end, :class => 'form-control', :placeholder => @docket.end %>
    </div>
    <div class="col-auto">
      <%= form.submit 'Change docket', :class => 'btn btn-primary' %>
    </div>
  </div>
  
  <div id="edit-docket-plans" class="form-row form-check">
    <%= form.fields_for :plans do |pf| %>
      <% current_user.plans.each do |plan| %>
      <div class="form-group form-check">
        <%= check_box_tag "docket[plans][]", plan.id, (@docket.plans.include? plan), :class => "form-check-input", :id => "cb#{plan.id}" %>
        <%= label_tag "cb#{plan.id}", plan.title, class: "form-check-label" do
        "#{link_to plan.title, plan_path(plan)}".html_safe
        end %>
      </div>
      <% end %>
    <% end %>
  </div>
<% end %>



<table class="table">  
  <thead>
    <tr>
      <th scope="col">Month</th>
      <th scope="col">W</th>
      <th scope="col">Mo</th>
      <th scope="col">Tu</th>
      <th scope="col">We</th>
      <th scope="col">Th</th>
      <th scope="col">Fr</th>
      <th scope="col">Sa</th>
      <th scope="col">Su</th>
    </tr>
  </thead>
  <tbody>
    <% first = true %>
    <% events = @docket.events %>
    
    <p><%= events.count %>: <%= events.map{|e| e.end}.join(', ')%></p>
    
    <% (@docket.weeks).each do |week|%>
    <tr>
      <th scope="row">
        <% if first or week.first.month != week.last.month %>
          <%= week.last.strftime('%B')%>
          <% first = false %>
        <% end %>
      </th>
      <td><%= week.first.strftime('%W') %></td>
      <% week.each do |day| %>
        <% if events.any?{|e| e.is_on? day }%>
          <% events_for_the_day = events.find_all{|e| e.is_on? day} %>
          <td 
            class="<%= 'other' if day.month.odd? %> has-event">
            <a 
              tabindex="0"
              role="button"
              data-toggle="popover"
              data-trigger="focus"
              title="Events on this day"
              data-placement="top"
              data-content="<%= events_for_the_day.map{|e| e.title}.join(', ')%>">
            <%= day.strftime('%d') %></td>
        <% else %>
          <td 
            class="<%= 'other' if day.month.odd? %>">
            <%= day.strftime('%d') %></td>
        <% end %>
      <% end %>
    </tr>
    <% end %>
  </tbody>
</table>