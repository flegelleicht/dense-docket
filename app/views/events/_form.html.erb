<%= form_with model: [@plan, @plan.events.build ], class: 'container-fluid', local: true do |form| %>
    <div class="form-group form-row">
      <%= form.label :title, class: 'col-sm-3' %>
      <%= form.text_field :title, class: 'form-control col-sm-9' %>
    </div>
    <div class="form-group form-row">
      <%= form.label :start, class: 'col-sm-3' %>
      <%= form.date_field :start, class: 'form-control col-sm-9' %>
    </div>
    <div class="form-group form-row">
      <%= form.label :end, class: 'col-sm-3'%>
      <%= form.date_field :end, class: 'form-control col-sm-9' %>
    </div>
    <div class="form-group form-row">
      <%= form.submit 'Create Event', class: 'btn btn-primary form-input' %>
    </div>
<% end %>

<%= form_with model: [@plan, @plan.events.build ], class: 'container', local: true do |form| %>
  <div class="form-group">
      <div class="form-row">
      <%= form.label :title, class: 'sr-only' %>
      <%= form.text_field :title, 
          class: 'form-control col-sm-12' ,
          placeholder: 'Title'
      %>
      </div>
      
      <div class="form-row">
      <%= form.label :start, class: 'sr-only' %>
      <%= form.date_field :start, 
          class: 'form-control col-sm-5',
          value: Date.today
      %>

      <%= form.label :end, class: 'sr-only'%>
      <%= form.date_field :end, 
          class: 'form-control col-sm-5',
          value: Date.today
      %>
      <%= form.submit 'Create', class: 'btn btn-primary form-control col-sm-2' %>
      </div>
      </div>
<% end %>
