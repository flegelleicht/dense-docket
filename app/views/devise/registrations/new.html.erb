<h2 class="registration">Sign up</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'container '}) do |f| %>
  <%= f.error_notification %>
  <div class="form-group form-row align-items-center">
    <%= f.label :email, 'E-Mail:', class: "col-sm-4" %>
    <%= f.input_field :email,
                type: 'email',
                required: true,
                autofocus: true ,
                input_html: { autocomplete: "email" },
                class: 'form-control col-sm-8',
                placeholder: 'ur@lovely.com',
                label: false
                %>
    </div>
    <div class="form-group form-row">
    <%= f.label :password, 'Password:', class: "col-sm-4" %>
    <%= f.input_field :password,
                type: 'password',
                required: true,
                input_html: { autocomplete: "new-password" },
                placeholder: '(6 characters minimum)',
                class: 'form-control col-sm-8'
                %>
  </div>
  <div class="form-group form-row">
    <%= f.label :password_confirmation, 'Confirm password:', class: "col-sm-4" %>
    <%= f.input_field :password_confirmation,
                type: 'password',
                required: true,
                class: "form-control col-sm-8",
                input_html: { autocomplete: "new-password" }
                %>
  </div>

  <div>
    <%= f.button :submit, "Sign up", class: "btn btn-primary" %>
  </div>
<% end %>
